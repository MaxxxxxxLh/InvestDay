generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://isepinvest:9mlCwJL90IPhk2q@37.187.249.109:5435/postgres?schema=public"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  studentId String?  @unique
  isAdmin   Boolean  @default(false)
  wallet    Wallet[]
}

model Wallet {
  id                Int           @id @default(autoincrement())
  createdAt         DateTime      @default(now())
  user              User          @relation(fields: [userId], references: [id])
  userId            Int
  transactions      Transaction[]
  cash              Float         @default(0)
  publicWalletValue Float         @default(0)
  datePublicUpdated DateTime      @default(now())
  lastUpdatedValue  Float         @default(0)
  dateLastUpdated   DateTime      @default(now())
}

enum Status {
  PENDING
  EXECUTED
  CANCELLED
  FAILED
}

model Transaction {
  id               Int       @id @default(autoincrement())
  createdAt        DateTime  @default(now())
  isSellOrder      Boolean   @default(false)
  symbol           String
  quantity         Float
  wallet           Wallet    @relation(fields: [walletId], references: [id])
  walletId         Int
  status           Status
  valueAtExecution Float?
  executedAt       DateTime?
}
